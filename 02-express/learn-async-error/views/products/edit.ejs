<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
</head>

<body>
  <h1>Edit Product</h1>
  <form action="/products/<%= product._id %>?_method=PUT" method="post">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" value="<%= product.name %>" placeholder="Product Name">
    <br>
    <label for="price">Price (Unit):</label>
    <input id="price" type="number" name="price" value="<%= product.price %>">
    <label for="category">Select Category</label>
    <select name="category" id="category">
      <% for (let category of categories){ %>
      <option value="<%= category %>" <%= product.category === category ? "selected" : "" %>> <%= category[0].toUpperCase() + category.slice(1) %></option>
      <% } %>
    </select>
    <button>Add Product</button>
  </form>
  <a href="/products/<%= product._id %>">Back</a>
</body>

</html>